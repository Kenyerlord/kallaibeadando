<Window x:Class="databaseeditor.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:databaseeditor"
        mc:Ignorable="d"
        Title="Order" Height="450" Width="800">
    <Grid Background="Wheat">
        <DataGrid x:Name="list"  Margin="0,0,400,0" SelectionChanged="beerdata_SelectionChanged"/>
        <TextBox x:Name="addorderid" HorizontalAlignment="Left" Margin="478,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="addbeerid" HorizontalAlignment="Left" Margin="478,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="addbuyerid" HorizontalAlignment="Left" Margin="478,103,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="addnumber" HorizontalAlignment="Left" Margin="478,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="updateorderid" HorizontalAlignment="Left" Margin="621,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="updatebeerid" HorizontalAlignment="Left" Margin="621,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="updatebuyerid" HorizontalAlignment="Left" Margin="621,103,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="updatenumber" HorizontalAlignment="Left" Margin="621,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.702,10.591"/>
        <TextBox x:Name="deleteid"  HorizontalAlignment="Left" Margin="631,217,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Order id:" HorizontalAlignment="Left" Margin="400,53,0,0" VerticalAlignment="Top"/>
        <Label Content="Beer id:" HorizontalAlignment="Left" Margin="400,76,0,0" VerticalAlignment="Top"/>
        <Label Content="Buyer id:" HorizontalAlignment="Left" Margin="400,99,0,0" VerticalAlignment="Top"/>
        <Label Content="Number:" HorizontalAlignment="Left" Margin="400,122,0,0" VerticalAlignment="Top"/>
        <Label Content="Order Management" HorizontalAlignment="Left" Margin="507,10,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Button x:Name="addbutton" Content="Add" Foreground="White" Background="#182ed6" HorizontalAlignment="Left" Margin="513,161,0,0" VerticalAlignment="Top" Width="50" Height="34" Click="addbutton_Click"/>
        <Button x:Name="editbutton" Content="Edit" Foreground="White" Background="#182ed6" HorizontalAlignment="Left" Margin="652,161,0,0" VerticalAlignment="Top" Height="34" Width="57" Click="editbutton_Click"/>
        <Button x:Name="deletebutton" Content="Delete" Background="#eb433d" HorizontalAlignment="Left" Margin="713,248,0,0" VerticalAlignment="Top" Click="deletebutton_Click"/>
        <Button x:Name="returnbutton" Content="Return" Background="#eb433d" HorizontalAlignment="Left" Margin="681,382,0,0" VerticalAlignment="Top" Click="returnbutton_Click"/>

    </Grid>
</Window>
