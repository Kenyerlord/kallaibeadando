<Window x:Class="databaseeditor.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:databaseeditor"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid Background="Wheat">
        <Button Foreground="White" Background="#182ed6" Content="Database Editor" HorizontalAlignment="Center" Margin="0,73,0,0" VerticalAlignment="Top" Height="63" Width="310" FontSize="22" Click="editorclick"/>
        <Button Background="#eb433d" Content="User Change" HorizontalAlignment="Center" Margin="0,258,0,0" VerticalAlignment="Top" Height="73" Width="310" FontSize="22" Click="userchangeclick"/>
        <Button Foreground="White" Background="Green" Content="Order Management" HorizontalAlignment="Center" Margin="0,164,0,0" VerticalAlignment="Top" Height="63" Width="310" FontSize="22" Click="orderclick"/>


    </Grid>
</Window>
